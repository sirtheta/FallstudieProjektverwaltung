<UserControl x:Class="Projektmanagement.Views.NewProcessModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:local="clr-namespace:Projektmanagement.Views" 
             xmlns:viewmodels="clr-namespace:Projektmanagement.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:NewProcessModel}"
             mc:Ignorable="d" 
             Background="WhiteSmoke"
             d:DesignHeight="300" 
             d:DesignWidth="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="133*"></ColumnDefinition>
      <ColumnDefinition Width="17*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="1">
      <Button fa5:Awesome.Content="Regular_Save" Command="{Binding BtnSave}"      Margin="0,10,0,0" HorizontalAlignment="Right" FontSize="25" Height="30" Width="30" Padding="0"/>
      <Button fa5:Awesome.Content="Solid_Plus"   Command="{Binding BtnAddOne}"    Margin="0,10,0,0" HorizontalAlignment="Right" FontSize="25" Height="30" Width="30" Padding="0"/>
      <Button fa5:Awesome.Content="Solid_Minus"  Command="{Binding BtnRemoveOne}" Margin="0,10,0,0" HorizontalAlignment="Right" FontSize="25" Height="30" Width="30" Padding="0"/>
    </StackPanel>
    <ScrollViewer>
      <StackPanel>
        <TextBox Text="{Binding Path=ProcessModelName}"  materialDesign:HintAssist.Hint="Process model name" HorizontalAlignment="Left"/>
        <ItemsControl ItemsSource="{Binding TextBoxCollection}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <TextBox Text="{Binding Path=Text}"  materialDesign:HintAssist.Hint="Input phase name" HorizontalAlignment="Left"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>
    </ScrollViewer>
  </Grid>
</UserControl>